@model IEnumerable<ProjectInfoEfCore.Models.Classes>

@{ 
    ViewBag.Title = "Classes";
}

<h2>Classes</h2>

<div>
    <table class="table">
        <tr>
            <th>Class Name</th>
            <th>Class File</th>
        </tr>
        
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Classes" asp-action="Details" asp-route-id="@item.ClassesId">@Html.DisplayFor(modelItem =>item.ClassName)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassFile)
                </td>
            </tr>

        }
    </table>
</div>